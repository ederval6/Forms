Edt_Imagem.Text:='';

//Edt_Cod_Imagem.Text:='';

end;

procedure TForm_Insp1.Btn_sairClick(Sender: TObject);
begin
Close;
end;

procedure TForm_Insp1.Btn_SalvarClick(Sender: TObject);
begin
 DM.ADO_Inspecao.Post;
DM.DMConexao.CommitTrans;
ShowMessage('Cadastro salvo com Sucesso!');
end;

