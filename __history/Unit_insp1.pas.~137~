procedure TForm_Insp1.FormClose(Sender: TObject; var Action: TCloseAction);
begin
 DM.ADO_Inspecao.close; // fechamos a conexão
 DM.ADO_Inspecao.close; // uma boa prática de programação: fechar as query´s abertas.
end;

procedure TForm_Insp1.FormCreate(Sender: TObject);
begin
//Edit1.Text := IntToStr(valor)
end;

procedure TForm_Insp1.FormKeyDown(Sender: TObject; var Key: Word;
  Shift: TShiftState);
begin
  if Key = VK_RETURN then
  Perform(WM_NEXTDLGCTL,0,0);

end;

procedure TForm_Insp1.FormShow(Sender: TObject);
begin


 if not DM.DMConexao.Connected then // abre a conexão com o banco de dados
 begin
   with DM.ADO_Inspecao do
   begin
   Close;
   SQL.Clear;
   SQL.Text := 'SELECT * FROM Inspecao ORDER BY Cod_Inspecao MAX ';
    Open;
    Edt_Codigo.Text := IntTostr(FieldByname('Cod_Inspecao').asInteger);

 end;
 DM.ADO_Inspecao.Open;
 DM.ADO_Inspecao.close; // já deveria estar fechada, mas se não estiver, nós a fechamos aqui;
 DM.ADO_Inspecao.open;
end;
end;

end.
