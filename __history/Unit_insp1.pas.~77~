procedure TForm_Insp1.FormClose(Sender: TObject; var Action: TCloseAction);
begin
   ADO_Inspecao.close; // fechamos a conexão
   ADO_Inspecao.close; // uma boa prática de programação: fechar as query´s abertas.
end;

procedure TForm_Insp1.FormShow(Sender: TObject);
begin
   if not DM.DMConexao.Connected then // abre a conexão com o banco de dados
 ADO_Inspecao.Open;
 ADO_Inspecao.close; // já deveria estar fechada, mas se não estiver, nós a fechamos aqui;
 //ADO_Inspecao.open;
end;

